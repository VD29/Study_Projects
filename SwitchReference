#include <iostream>
using namespace std;

class Help {
	int id{1};
public:
	int get_id() { return id; }
	void helpon(char what);
	void showmenu();
	bool isvalid(char ch);

	~Help() {
		cout << "\n" << "Your ID was: " << get_id() << "\n";
	}

};



void Help::showmenu()
{
	cout << "Reference about: \n" << " 1. if\n" << " 2. switch\n" << " 3. for\n";
	cout << " 4. while\n" << " 5. do-while\n" << " 6. break\n" << " 7. continue\n";
	cout << " 8. goto\n" << " 9. get ID\n" << "Select one of the items (q - for Quit): ";
}

bool Help::isvalid(char ch) 
{
	if (ch < '1' || ch > '9' && ch != 'q') {
		return false;
	} else {
		return true;
	}
}

void Help::helpon(char what) 
{
		switch (what) {
		case '1':
			cout << "If clause:\n\n" << "if (condition) clause;\n" << "else clause;\n";
			break;
		case '2':
			cout << "Switch clause:\n\n" << "switch (term) {\n" << "case constant: \n" << " sequence of clauses\n" << " break;\n" << "// ...\n" << "}\n";
			break;
		case '3':
			cout << "For loop:\n\n" << "for (initialization; condition; increment)\n" << "clause;\n";
			break;
		case '4':
			cout << "While loop:\n\n" << "while (condition) clause;\n";
			break;
		case '5':
			cout << "Do-while loop:\n\n" << "do {\n" << "clause;\n" << "} while (condition);\n";
			break;
		case '6':
			cout << "Break clause:\n\n" << "break;\n";
			break;
		case '7':
			cout << "Continue clause:\n\n" << "continue;\n";
			break;
		case '8':
			cout << "Goto clause:\n\n" << "goto;\n";
			break;
		case '9':
			cout << "Your ID is: " << get_id() << "\n\n";
			break;
		}
		cout << "\n";
}

int main()
{
	char choice;
	Help hlpob;

	for (;;) {
		do {
			hlpob.showmenu();
			cin >> choice;
		} while (!hlpob.isvalid(choice));

		if (choice == 'q') break;
		cout << "\n";

		hlpob.helpon(choice);
	}

	return 0;
}
